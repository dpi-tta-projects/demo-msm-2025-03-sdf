<div class="card h-100">
  <div class="card-header"><%= character.actor.name %></div>
  <div class="card-body d-flex flex-column">
    <h5 class="card-title"><%= character.name %></h5>
    <div class="mb-2">
      <small class="text-body-secondary"><%= character.movie&.title %></small>
    </div>
    <%= link_to 'Details', "characters/#{character.id}", class: "btn btn-outline-primary rounded-pill w-100 mt-auto" %>
  </div>
</div>

<div>
  <div>
    <h1>
      Actor #<%= @the_actor.id %> details
    </h1>

    <div>
      <div>
        <a href="/actors">
          Go back
        </a>
      </div>

      <div>
        <a href="/actors/<%= @the_actor.id %>/edit">
          Edit actor
        </a>
      </div>

      <div>
        <!-- TODO: fix link delete syntax -->
        <a href="/actors/<%= @the_actor.id %>" data-method="delete">
          Delete actor
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Dob
      </dt>
      <dd>
        <%= @the_actor.dob %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @the_actor.name %>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @the_actor.bio %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_actor.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_actor.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

<%# TODO: refactor query to model %>
<h2>Filmography</h2>

<table border="1">
  <tbody>
    <tr>
      <th>
        Title
      </th>

      <th>
        Year
      </th>

      <th>
        Director
      </th>

      <th>
        Character name
      </th>

      <th>
      </th>
    </tr>

    <% @the_actor.characters.each do |character| %>
      <tr>
        <td>
          <%= character.movie.title %>
        </td>

        <td>
          <%= character.movie.year %>
        </td>

        <td>
          <%= character.movie.director.name %>
        </td>

        <td>
          <%= character.name %>
        </td>

        <td>
          <a href="/movies/<%= character.movie.id %>">
            Show details
          </a>
        </td>
      </tr>
    <% end %>

    
  </tbody>
</table>

<h2>Filmography</h2>

<table border="1">
  <tbody>
    <tr>
      <th>
        Title
      </th>

      <th>
        Year
      </th>

      <th>
        Director
      </th>

      <th>
        Character name
      </th>

      <th>
      </th>
    </tr>

    <% @the_actor.characters.each do |character| %>
      <tr>
        <td>
          <%= character.movie.title %>
        </td>

        <td>
          <%= character.movie.year %>
        </td>

        <td>
          <%= character.movie.director.name %>
        </td>

        <td>
          <%= character.name %>
        </td>

        <td>
          <a href="/movies/<%= character.movie.id %>">
            Show details
          </a>
        </td>
      </tr>
    <% end %>

    
  </tbody>
</table>

<div class="card h-100">
  <img src="<%= actor.image %>" class="card-img-top" alt="<%= actor.name %> portrait">
  <div class="card-body d-flex flex-column">
    <h5 class="card-title"><%= actor.name %></h5>
    <div class="mb-2">
      <small class="text-body-secondary"><%= actor.dob %></small>
    </div>
    <%= link_to 'Details', actor_path(actor), class: "btn btn-outline-primary rounded-pill w-100 mt-auto" %>
  </div>
</div>

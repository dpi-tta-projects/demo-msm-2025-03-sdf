<%= link_to actor_path(actor), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-start" do %>
  <div class="ms-2 me-auto">
    <div class="fw-bold"><%= actor.name %></div>
    <%= actor.bio.truncate_words(8) %>
  </div>
  <span class="badge text-bg-primary rounded-pill"><%= actor.dob %></span>
<% end %>

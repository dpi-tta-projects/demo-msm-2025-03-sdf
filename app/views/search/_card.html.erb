<div class="card h-100">
  <img src="<%= movie.image %>" class="card-img-top" alt="<%= movie.title %> poster">
  <div class="card-body d-flex flex-column">
    <h5 class="card-title"><%= movie.title %></h5>
    <div class="mb-2">
      <small class="text-body-secondary"><%= movie.year %></small>
    </div>
    <%= link_to 'Details', movie_path(movie), class: "btn btn-outline-primary rounded-pill w-100 mt-auto" %>
  </div>
</div>

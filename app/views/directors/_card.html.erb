<div class="card h-100">
  <img src="<%= director.image %>" class="card-img-top" alt="<%= director.name %> portrait">
  <div class="card-body d-flex flex-column">
    <h5 class="card-title"><%= director.name %></h5>
    <div class="mb-2">
      <small class="text-body-secondary"><%= director.dob %></small>
    </div>
    <%= link_to 'Details', "directors/#{director.id}", class: "btn btn-outline-primary rounded-pill w-100 mt-auto" %>
  </div>
</div>

<div>
  <div>
    <h1>
      List of all movies
    </h1>
  </div>
</div>

<hr>

<div>
  <a href="/movies/new">Add a new movie</a>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Year
        </th>

        <th>
          Director
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.id %>
        </td>

        <td>
          <%= movie.title %>
        </td>

        <td>
          <%= movie.year %>
        </td>

        <td>
          <%= movie.director_id %>
        </td>

        <td>
          <%= time_ago_in_words(movie.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(movie.updated_at) %> ago
        </td>

        <td>
          <a href="/movies/<%= movie.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<%= paginate @movies %>

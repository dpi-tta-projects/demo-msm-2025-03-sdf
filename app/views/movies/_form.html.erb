<% if @movie.errors.any? %>
  <div id="error_explanation">
    <h2 style="color: red;"><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

    <ul>
      <% @movie.errors.each do |error| %>
        <li style="color: red;"><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @movie) do |form| %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :year %>
    <%= form.text_field :year %>
  </div>

  <div>
    <%= form.label :director_id %>
    <%= form.collection_select :director_id, Director.all, :id, :name, include_blank: true %>
    <div>
      <%# TODO: change to link_to new_director_path after updating routes %>
      or <a href="/directors">Add a new director</a> first
    </div>
  </div>

  <%= form.submit %>
<% end %>

<div class="container my-3">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h1 class="h5 mb-0 fw-bold"><%= @movie.title %> <span class="text-body-secondary ms-2"><%= @movie.year %></span></h1>
      <div class="d-flex align-items-center">
        <% if policy(@movie).edit? %>
          <%= link_to edit_movie_path(@movie) do %>
            <i class="bi bi-pencil-square"></i>
          <% end %>
        <% end %>

        <% if policy(@movie).destroy? %>
          <%= button_to movie_path(@movie), class: "btn btn-link link-danger", method: :delete, data: { turbo_confirm: "Are you sure?" } do %>
            <i class="bi bi-trash3"></i>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%# TODO: only round the bottom left%>
        <img src="<%= @movie.image %>" class="img-fluid rounded rounded-top-0 rounded-end-0" alt="<%= @movie.title %> image">
      </div>
      <div class="col-md-8">
        <div class="card-body">

          <div class="card-text"><%= @movie.description %></div>

          <%# TODO: move to somewhere else %>
          <% if @movie.director %>
            <div class="mt-5">
              <strong>
                Directed by
              </strong>
              <a href="/directors/<%= @movie.director_id %>">
                <%= @movie.director.name %>
              </a>
            </div>
          <% end %>

          <div>
            <%= render "likes/like", likeable: @movie %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
